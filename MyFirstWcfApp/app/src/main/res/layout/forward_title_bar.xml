<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tv_forward_back"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:drawableStart="@drawable/sl_title_back"
        android:focusable="true"
        android:text="@string/forward_title_back"
        android:textColor="@drawable/sl_title_back"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tv_forward_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/forward_title_submit"
        android:textColor="@drawable/sl_title_back"
        android:textSize="18sp"
        tools:ignore="RelativeOverlap"/>

</RelativeLayout>