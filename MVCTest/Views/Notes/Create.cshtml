@model MVCTest.Models.NoteDB

@{
    ViewBag.Title = "Create";
}

<h2>发布朋友圈</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>文本</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <p class="control-label col-md-2">发布内容：</p>
            <div class="col-md-10">
                <textarea name="Text" id="Text" wrap="soft" rows="5" cols="50" class="form-control text-box single-line"></textarea> 
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="发布" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回", "Index")
</div>
